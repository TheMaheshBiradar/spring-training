ALTER TABLE HR.OPP_T_BUS_HIERARCHY DROP PRIMARY KEY CASCADE;

DROP TABLE HR.OPP_T_BUS_HIERARCHY  CASCADE CONSTRAINTS;

CREATE TABLE HR.OPP_T_BUS_HIERARCHY  (

BUS_HIERARCHY_ID                  NUMBER  NOT NULL,
NAME               VARCHAR2(100 BYTE)  NOT NULL,
LABEL_REF_ID   VARCHAR2(100 BYTE)  NOT NULL,
SORT_ORDER        NUMBER(2)   NOT NULL,
PRIMARY_THEME_ID  INTEGER     NOT NULL,
COLUMN_TYPE_ID  NUMBER,
JIRA_ID         VARCHAR2(12 CHAR)
);



CREATE UNIQUE INDEX HR.OPP_PK_BUS_HIERARCHY  ON HR.OPP_T_BUS_HIERARCHY
(BUS_HIERARCHY_ID);

ALTER TABLE HR.OPP_T_BUS_HIERARCHY ADD (
CONSTRAINT OPP_PK_BUS_HIERARCHY
PRIMARY KEY
  (BUS_HIERARCHY_ID)
  USING INDEX HR.OPP_PK_BUS_HIERARCHY
  ENABLE VALIDATE
);


