ALTER TABLE HR.OPP_T_REF_VARIATION DROP PRIMARY KEY CASCADE;

DROP TABLE HR.OPP_T_REF_VARIATION  CASCADE CONSTRAINTS;

CREATE TABLE HR.OPP_T_REF_VARIATION  (

VARIATION_ID                  NUMBER  NOT NULL,
VARIATION_NAME               VARCHAR2(100 BYTE)  NOT NULL,
PARENT_ID                         NUMBER  DEFAULT 0,
LABEL_REF_ID   VARCHAR2(100 BYTE)  NOT NULL,
SORT_ORDER        NUMBER


);



CREATE UNIQUE INDEX HR.OPP_PK_REF_VARIATION  ON HR.OPP_T_REF_VARIATION 
(VARIATION_ID);

ALTER TABLE HR.OPP_T_REF_VARIATION ADD (
CONSTRAINT OPP_PK_REF_VARIATION
PRIMARY KEY
  (VARIATION_ID)
  USING INDEX HR.OPP_PK_REF_VARIATION
  ENABLE VALIDATE
);


